# AlphaSignal Environment Variables
# Copy this file to .env and fill in your actual values
# NEVER commit .env to Git!

# ============================================
# LLM API Keys (Required)
# ============================================

# Google Gemini API Key
# Get it from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# DeepSeek API Key (Optional, fallback LLM)
# Get it from: https://platform.deepseek.com/api_keys
DEEPSEEK_API_KEY=your_deepseek_api_key_here

# ============================================
# Notification Channels (Optional)
# ============================================

# Email Configuration
SMTP_HOST=your_smtp_host # e.g., smtp.gmail.com for Gmail
SMTP_PORT=your_smtp_port # e.g., 587 for TLS, 465 for SSL
EMAIL_SENDER=your_email@example.com
EMAIL_PASSWORD=your_email_app_password
EMAIL_RECEIVER=recipient@example.com

# Frontend Base URL (for password reset links in emails)
FRONTEND_BASE_URL=http://localhost:3000

# Email Provider Settings
# Options: 'resend' (recommended), 'smtp'
EMAIL_PROVIDER=resend
RESEND_API_KEY=re_123456789abc


# Bark Notification (iOS)
# Get it from: https://apps.apple.com/app/bark/id1403753865
BARK_URL=https://api.day.app/your_device_key

# ============================================
# Application Settings
# ============================================

# Data source to use (google_news or rsshub)
DATA_SOURCE=google_news

# LLM provider to use (gemini or deepseek)
LLM_PROVIDER=gemini

# Monitoring interval in seconds
MONITOR_INTERVAL=1800

# ============================================
# Database (Auto-configured, no changes needed)
# ============================================
DB_PATH=alphasignal.db

# ============================================
# Security (Production)
# ============================================

# API Key for protecting your endpoints (generate a random string)
# Generate with: openssl rand -hex 32
# Leave empty in development for open access
API_KEY=

# Frontend API Key (optional, for client-side requests in production)
# Only needed if you want to restrict frontend access
# NEXT_PUBLIC_API_KEY=your_frontend_api_key_here

# Allowed origins for CORS (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# ============================================
# Observability (Sentry)
# ============================================

# Sentry DSN for error tracking
NEXT_PUBLIC_SENTRY_DSN=your_sentry_dsn_here

# Sentry Auth Token (Required for build time source map upload)
# Get it from: https://sentry.io/settings/account/api/auth-tokens/
SENTRY_AUTH_TOKEN=your_sentry_auth_token_here

# Log format: 'text' (default) or 'json'
LOG_FORMAT=text

# ============================================
# NextAuth.js (v5)
# ============================================
# A random string used to hash tokens. A new one can be generated with `openssl rand -base64 32`
AUTH_SECRET=your_nextauth_secret_key
# The base URL of your Next.js application.
AUTH_URL=http://localhost:3000

